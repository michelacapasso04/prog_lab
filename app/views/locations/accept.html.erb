<div class="image_cover">
    <%= image_tag  "https://upload.wikimedia.org/wikipedia/commons/thumb/3/3d/Casa_Classic_Cocktail_Bar_%26_Jazz_Club_by_Roland_Barrera.jpg/1280px-Casa_Classic_Cocktail_Bar_%26_Jazz_Club_by_Roland_Barrera.jpg" %>
</div>
<div class="table-scroll">
  <div class="title"><h1>Accept Locations</h1> </div>
  <%= form_tag '/accept', :action => 'accept_locations', :method =>'POST' do %>
  <div class="table-conteiner">
    <% if !@list.empty? %>
      <table class="table">
          <thead>
              <th>Nome</th>
              <th>Long</th>
              <th>Lat</th>
              <th> Select which accept </th>
              <th colspan="3"></th>
          </thead>
          <tbody>
              <% @list.each do |loc| %>
                  <tr>
                      <td><%= loc.name %></td>
                      <td><%= loc.long %></td>
                      <td><%= loc.lat %> &nbsp;</td>
                      <td><%= check_box_tag "accepted[#{loc.id}]", loc.id -%><td>
                      <td><%= link_to "Show", location_path(loc.id) %>&nbsp;</td>
                  </tr>
              <% end %>
          </tbody>
      </table>
    </div>
    <% else %>
      There aren't locations to accept
    <%end%>
    <% if !@list.empty? %>
    <%= submit_tag "Confirm", class: "btn btn-success"%>
    <%end%>
  <% end -%>
</div>




